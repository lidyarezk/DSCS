<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64A1BD"
    tools:ignore="DuplicateIds,MissingPrefix,RedundantNamespace">

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="349dp"
        tools:ignore="MissingConstraints">


    </FrameLayout>

    <EditText
        android:id="@+id/editTextTextEmailAddress3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        tools:ignore="Autofill,HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="454dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:backgroundTint="#64A1BD"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="528dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:text="Enter the email address associated with your account and we'll send you a link to reset your password"
        android:textSize="18sp"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="381dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/white"
        app:srcCompat="@drawable/arrow_back"
        app:tint="#64A1BD"
        tools:ignore="ContentDescription,ImageContrastCheck,KeyboardInaccessibleWidget,MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>